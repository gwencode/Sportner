<div class="container">
  <div class="sand-underline">
    <h2 class="h2-black900 text-center mb-3"> Mes événements</h2>
  </div>
  <div data-controller="filters">
    <div class="filters-my-events mb-3">
      <button class="btn-small run select"
                data-filters-target="runbtn"
                data-action="click->filters#runfilter">
                <p>Running</p></button>
        <button class="btn-small surf select"
                data-filters-target="surfbtn"
                data-action="click->filters#surffilter">
                <p>Surf</p></button>
    </div>
    <div class="d-flex justify-content-around">
      <button class="btn-temporal"
              data-filters-target="futurbtn"
              data-filters-target="futurbtndisable"
              data-action="click->filters#myFuturEventsDisplay">
              <p>A venir</p></button>
      <button class="btn-temporal temporal-disable"
              data-filters-target="pastbtn"
              data-action="click->filters#myPastEventsDisplay">
              <p>Passés</p></button>
    </div>

    <div class=""
        data-filters-target="myfuturevents">
      <% next_events = @events.where("date >= ?", Date.today) %>
      <% next_events.each do |event| %>
        <%= render "card_my_events", event: event %>
      <% end %>
    </div>
    <div class="d-none"
        data-filters-target="mypastevents">
      <% past_events = @events.where("date < ?", Date.today) %>
      <% past_events.each do |event| %>
        <%= render "card_my_events", event: event %>
      <% end %>
    </div>
  </div>
</div>
